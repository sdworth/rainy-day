<%= form_for @song do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'textfield' %>
  </div>

  <div class="form-group">
    <%= f.label 'Youtube URL' %>
    <%= f.text_field :link, class: 'textfield' %>
  </div>

  <%= f.submit 'Submit', class: 'submit-button' %>
<% end %>